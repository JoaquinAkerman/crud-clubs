<html>
  <head>
    <meta charset='utf-8' />
    <title>Club Management System</title>
    <link
      rel='stylesheet'
      href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <h1>Club Management System PAG ACTUAL</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Logo</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each clubes}}
          <tr>
            <td>{{name}}</td>
            <td><img src='{{crestUrl}}' alt='{{name}}' /></td>
            <td>{{address}}</td>
            <td>
              <a href='/clubes/{{id}}'>View</a>
              <a href='/clubes/edit/{{id}}'>Edit</a>
              <a href='/clubes/delete/{{id}}'>Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <a href='/clubes/create'>Create New Club</a>
  </body>
</html>